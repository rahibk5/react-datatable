{
    "compilerOptions": {
      "target": "ES2017",
      "lib": ["ESNext", "dom"], // Add "es2017" here
      "module": "ESNext",
      "jsx": "react-jsx",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "./dist"
    },
    "include": ["src"]
  }
  